<%= form_tag sessions_path, method: :post do %>
  <%= text_field_tag :username, nil, { class: 'Input', placeholder: 'Username', required: true, autofocus: true } %>
  <%= password_field_tag :password, nil, { class: 'Input', placeholder: 'Password', required: true } %>
  <%= button_tag 'Login', class: 'Button' %>
<% end %>
