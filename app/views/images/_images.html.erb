<div class='images'>
  <%= content_tag_for :figure, images do |image| %>
    <%= link_to [image.user, image] do %>
      <%= image_tag resize(url: image.url, width: 300, height: 300) %>
    <% end %>

    <% if logged_in? %>
      <%= link_to '&times;'.html_safe, [current_user, image], method: :delete, data: { confirm: 'Are you sure?' }, class: 'image-delete-link' %>
    <% end %>
  <% end %>
</div>
