<nav class='breadcrumb'>
  <span class='breadcrumb__current'>
    <%= @user %>
  </span>

  <% if authorable? %>
    <%= render 'form' %>
  <% end %>
</nav>

<div class='grid'>
  <% @collections.each do |collection| %>
    <%= link_to user_collection_path(@user, collection), class: 'grid-item' do %>
      <div class='collection-title'>
        <%= collection.title %> -
        <em><%= collection.connections.size == 0 ? 'empty' : collection.connections.size %></em>
      </div>
      <div class='collection-timestamp'>
        <%= time_ago_in_words(collection.updated_at) %> ago
      </div>
    <% end %>
  <% end %>
</div>

<div class='l-pagination'>
  <%= paginate @collections %>
</div>
