<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Joined</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %> ago</td>
        <td><%= link_to 'Show', user, class: 'button is-block' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'button is-block' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-block is-dangerous' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create an account', new_user_path, class: 'button is-block' %>
